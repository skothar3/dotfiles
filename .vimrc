set nocompatible
filetype plugin off
set laststatus=2
set ruler
set path+=**
set wildmenu
set hlsearch
if has('mouse')
  set mouse=a
endif

setlocal number
syntax on
colorscheme desert
setlocal tabstop=2
setlocal shiftwidth=2
setlocal expandtab
setlocal softtabstop=2
setlocal autoindent
setlocal smartindent
